/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "@angular/localize"
    ]
  },
  "include": [
    /* For the app Component */
    "src/app/*.spec.ts",
    /* For others components */
    "src/app/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
